<%= form_for @author do |f| %>
  <ul>
    <li>
      <%= f.label :first_name %>
      <%= f.text_field :first_name %>
    </li>
    <li>
      <%= f.label :last_name %>
      <%= f.text_field :last_name %>
    </li>
    <li>
      <%= f.label :birth_year %>
      <%= f.text_field :birth_year %>
    </li>
    <li>
      <%= f.label :death_year %>
      <%= f.text_field :death_year %>
    </li>
    <li>
      <%= f.label :birth_place %>
      <%= f.text_field :birth_place %>
    </li>
    <li>
      <%= f.submit "save" %>
    </li>
  </ul>


<% end %>

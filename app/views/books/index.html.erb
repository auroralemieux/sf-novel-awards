<section class="index-content">
  <h1 class="index-header">All Books</h1>

  <% if @books.size == 0 %>
  <p class="none-found">
    No books found.
  </p>
  <% else %>

  <table class="index-table">
    <tr class="centered">
      <th>
        Title
      </th>
      <th>
        Author
      </th>
      <th>
        Award
      </th>
    </tr>
    <% @books.each do |book| %>
    <tr>
      <td >
        <%= link_to book.title, book_path(book.id) %>
      </td>
      <td class="centered">
        <ul>
          <% book.authors.each do |author| %>
          <li>
            <%= link_to author.full_name, author_path(author.id) %>
          </li>
          <% end %>
        </ul>
      </td>
      <td class="centered">
        <% if book.awards.empty? %>
          <p>
            no awards yet
          </p>
          <% else %>
          <ul>

        <% book.awards.each do |award| %>
        <li>
          <%= award.award_type %> in <%= award.year.year %>
        </li>
        <% end %>
      </ul>

        <% end %>
      </td>
    </tr>
    <% end %>


  </table>
  <% end %>
</section>

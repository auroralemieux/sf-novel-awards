
<ul class="search">
  <li>
    <%= form_tag(books_path, method: :get , id: "search-form") do %>
    <%= text_field_tag :search, params[:search], placeholder: "Search Books" %>
    <%= submit_tag "Search", :name => nil %>
    <% end %>
  </li>
  <li>
    <%= button_to 'Reset', books_path, method: :get %>
  </li>
</ul>

<section class="index-content">
  <h1 class="index-header">All Books</h1>

  <table class="index-table">
    <tr  class="centered">
      <th>
        Title
      </th>
      <th>
        Author
      </th>
      <th>
        Award
      </th>
      <th>
        Year
      </th>
    </tr>
    <% @books.each do |book| %>
    <tr>
      <td>
        <%= link_to book.title, book_path(book.id) %>
      </td>
      <td class="centered">
        <%= link_to book.author.full_name, author_path(book.author.id) %>
      </td>
      <td class="centered">
        <%= book.award %>
      </td>
      <td class="centered">
        <%= book.year.year %>
      </td>
    </tr>
    <% end %>

    <% if @books.size == 0 %>
    <p>
      No books found.
    </p>
    <% end %>

  </table>
</section>

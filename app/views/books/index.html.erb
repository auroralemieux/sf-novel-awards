<h1>All Books</h1>
<%# link_to "all Nebula winners", @books.where(award: "Nebula") %>
<%# link_to "all Hugo winners", @books.where(award: "Hugo") %>
<% @books.each do |book| %>
  <ul>
    <!-- <li>
      image will go here
      <%# image_tag book.cover %>
    </li> -->
    <li>
      <%= link_to book.title, book_path(book.id) %>, by <%= link_to book.author.full_name, author_path(book.author.id) %>, won the <%= book.award %> in <%= book.year.year %>.
    </li>
  </ul>

<% end %>
<% if @books.size == 0 %>
    <p>
      No books found.
    </p>
  <% end %>
